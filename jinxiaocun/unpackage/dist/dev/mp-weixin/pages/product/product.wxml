<view class="container"><cu-custom vue-id="1" bgColor="bg-blue" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">{{title}}</view></cu-custom><view class="cu-bar search bg-white"><view class="search-form round"><text class="cuIcon-search"></text><input adjust-position="{{false}}" type="text" placeholder="输入编码、名称" confirm-type="search" data-event-opts="{{[['focus',[['InputFocus',['$event']]]],['blur',[['InputBlur',['$event']]]]]}}" bindfocus="__e" bindblur="__e"/></view><view class="action"><button class="cu-btn bg-green shadow-blur round">搜索</button></view></view><view class="VerticalBox"><scroll-view class="VerticalNav nav" style="height:calc(100vh - 280rpx);" scroll-y scroll-with-animation scroll-top="{{verticalNavTop}}"><block wx:for="{{types}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['cu-item',index==tabCur?'text-green cur':'']}}" data-id="{{index}}" data-event-opts="{{[['tap',[['TabSelect',['$event']]]]]}}" bindtap="__e">{{''+item.name+''}}</view></block></scroll-view><scroll-view class="VerticalMain" style="height:calc(100vh - 280rpx);" scroll-y scroll-with-animation scroll-into-view="{{'main-'+mainCur}}" data-event-opts="{{[['scroll',[['VerticalMain',['$event']]]]]}}" bindscroll="__e"><block wx:for="{{types}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="padding-top padding-lr" id="{{'main-'+index}}"><view class="cu-bar solid-bottom bg-white"><view class="action"><text class="cuIcon-title text-green"></text>{{item.name}}</view></view><view class="cu-list menu-avatar"><block wx:for="{{lists}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['handleEdit',['$0'],[[['lists','',index]]]]]]]}}" class="cu-item" bindtap="__e"><view class="content"><view class="text-grey">{{item.name}}</view><view class="text-gray text-sm flex"><text class="text-cut">{{''+item.code+''}}</text></view></view><view class="action"></view></view></block></view></view></block></scroll-view></view><button style="height:100rpx;margin-top:-50rpx;" type="primary" data-event-opts="{{[['tap',[['handleAdd']]]]}}" bindtap="__e">增加产品</button></view>